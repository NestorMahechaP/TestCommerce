@using Clients.WebClient.Models.Order;

@model List<ClientOrderDto>
@{
    ViewData["Title"] = "Order Page";
}

<div class="text-center">
    <h1 class="display-4">Orders</h1>
</div>

<div class="card">
    <div class="card-header">
        List
    </div>
    <div class="card-body">
        <a asp-action="Order" asp-controller="Order" asp-route-id="0" class="btn btn-success btn-sm">New Order</a>
        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th>Customer Id</th>
                    <th>Products Ids</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.CustomerId</td>
                            <td>@item.ProductIds</td>
                            <td>
                                <a asp-action="Order" asp-controller="Order" asp-route-id="@item.OrderId" class="btn btn-primary btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-controller="Order" asp-route-id="@item.OrderId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>

                }
            </tbody>
        </table>
    </div>
</div>