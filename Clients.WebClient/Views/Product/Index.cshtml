@using Clients.WebClient.Models.Catalog;

@model List<ProductDto>
@{
    ViewData["Title"] = "Product Page";
}

<div class="text-center">
    <h1 class="display-4">Products</h1>
</div>

<div class="card">
    <div class="card-header">
        List
    </div>
    <div class="card-body">
        <a asp-action="Product" asp-controller="Product" asp-route-id="0" class="btn btn-success btn-sm">New Product</a>
        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Stock</td>
                        <td>
                            <a asp-action="Product" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                
                }
            </tbody>
        </table>
    </div>
</div>